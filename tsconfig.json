{
  "compilerOptions": {
    "outDir": "./functions/lib",          // Output directory for compiled files
    "rootDir": ".",             // Base directory for input files
    "module": "commonjs",       // Required for Firebase functions
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@buddy-turborepo/shared": ["../shared"]
    }
  },
  "include": [
    "core/**/*.ts"              // Include all TypeScript files in 'core'
  ],
  "exclude": [
    "node_modules",             // Exclude unnecessary directories
    "lib"                       // Exclude compiled output
  ]
}
